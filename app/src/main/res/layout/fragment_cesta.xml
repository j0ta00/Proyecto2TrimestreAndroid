<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CestaFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Cabecera"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:text="Cesta Actual:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewCesta"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="500dp"
        android:layout_gravity="center"></androidx.recyclerview.widget.RecyclerView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:backgroundTint="#eb7434">
    <TextView
        android:id="@+id/Total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="10dp"
        android:layout_weight="50"/>

    <Button
        android:id="@+id/btnProcesarCesta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:backgroundTint="#71a665"
        android:drawableLeft="@drawable/ic_baseline_shopping_cart_checkout_24"
        android:text="Confirmar"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoProducto"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>


</LinearLayout>